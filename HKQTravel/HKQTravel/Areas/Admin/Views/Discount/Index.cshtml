@model IEnumerable<HKQTravel.Models.discount>

@{
    ViewBag.Title = "Danh sách mã giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.discount_month)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.percentage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.discount_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.discount_month)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.percentage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.discount_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.discount_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.discount_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.discount_id })
        </td>
    </tr>
}

</table>

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-danger">
                        DANH SÁCH MÃ GIẢM GIÁ
                    </strong>
                </div>
                <div class="col-md-6 text-right">
                    <a href="@Url.Action("Create","Discount")" class="btn btn-sm btn-success">Thêm</a>
                    <a href="@Url.Action("","")" class="btn btn-sm btn-danger">Thùng rác</a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>Id</th>
                    <th>Bắt đầu có hiệu lực</th>
                    <th>Gíá trị</th>
                    <th>Tên mã giảm</th>

                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center"><input type="checkbox" /></td>
                        <td class="text-center">@item.discount_id</td>
                        <td>@item.discount_month</td>
                        <td>@item.percentage</td>
                        <td>@item.discount_month</td>
                        <td class="text-center">

                            <a href="@Url.Action("Edit","Admin",new { id = item.bill_tour_id })" class="btn btn-sm btn-success">Sửa</a>
                            <a href="@Url.Action("Details","Admin",new { id = item.bill_tour_id })" class="btn btn-sm btn-info">Chi tiết</a>
                            <a href="@Url.Action("Delete","Admin",new { id = item.bill_tour_id })" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </table>

        </div>
        <div class="card-footer">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
            <div class="MenuTrang">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
            </div>
            <style>
                .MenuTrang li {
                    display: inline;
                }

                    .MenuTrang li a {
                        color: black;
                        float: left;
                        padding: 8px 16px;
                        text-decoration: none;
                    }
            </style>
        </div>
    </div>
</section>